<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoIv"
        android:layout_width="100dp"
        android:src="@drawable/ic_date_range_black_24dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
 />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logoIv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="İsminizi Giriniz" />

            <EditText
                android:id="@+id/usernameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:drawable/edit_text"
                android:hint="İsim" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Meslek durumu" />

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/jobSpinner"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="İlişki durumu seçiniz" />

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/relationSpinner"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Doğum tarihi seçiniz" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:background="@drawable/rounded_rectangle_bc"
                android:id="@+id/btnDatePicker"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:text="Seç" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Cinsiyetinizi giriniz" />

            <RadioGroup
                android:layout_width="wrap_content"

                android:id="@+id/genderRadioGroup"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    android:text="Kadın" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="3dp"
                    android:text="Erkek" />


            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:text="Devam Et"
                android:id="@+id/btnOK"
                android:background="@drawable/rounded_rectangle_bc"
                android:layout_margin="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </ScrollView>
</RelativeLayout>